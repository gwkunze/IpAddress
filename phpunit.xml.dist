<phpunit bootstrap="./tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="IPAddress Test Suite">
            <directory suffix="Test.php">./tests/IPAddress/Test/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src/IPAddress/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="coverage/" charset="UTF-8"
           yui="true" highlight="true"
           lowUpperBound="35" highLowerBound="70"/>
    </logging>

</phpunit>
